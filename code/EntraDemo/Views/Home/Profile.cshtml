@{
    ViewData["Title"] = "Profile";
}

<h2>User Profile</h2>

@if (ViewBag.AllClaims != null)
{
    <div class="alert alert-warning">
        <strong>Debug Info:</strong> User ID: <code>@ViewBag.UserId</code><br>
        <details>
            <summary>All Claims (@(((IEnumerable<dynamic>)ViewBag.AllClaims).Count()) claims)</summary>
            <div class="mt-2">
                @foreach (var claim in (IEnumerable<dynamic>)ViewBag.AllClaims)
                {
                    <small><strong>@claim.Type:</strong> @claim.Value<br></small>
                }
            </div>
        </details>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @{
                    var entraUser = ViewBag.EntraUser as Microsoft.Graph.Models.User;
                }

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-building"></i> Entra ID Account
                    </h5>
                    <span class="badge bg-primary">
                        <i class="fas fa-key"></i> Signed in via Entra ID
                    </span>
                </div>

                @if (entraUser != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Display Name:</strong> @entraUser.DisplayName</p>
                            <p><strong>Given Name:</strong> @(entraUser.GivenName ?? "Not set")</p>
                            <p><strong>Surname:</strong> @(entraUser.Surname ?? "Not set")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>User Principal Name:</strong> @entraUser.UserPrincipalName</p>
                            <p><strong>Mail:</strong> @(entraUser.Mail ?? "Not set")</p>
                            <p><strong>User ID:</strong> <code class="small">@entraUser.Id</code></p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>Error:</strong> Unable to load Entra ID user data. User ID used: <code>@ViewBag.UserId</code>
                    </div>
                }
                
                <hr />
                
                <h5>Google Account Linking</h5>
                @if (ViewBag.GoogleLinked == true)
                {
                    <div class="alert alert-success">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong><i class="fab fa-google"></i> Google Account Linked!</strong><br>
                                <small>Google ID: <code>@ViewBag.LinkedGoogleId</code></small><br>
                                <small class="text-muted">You can use this Google account for external integrations.</small>
                            </div>
                            <a asp-controller="Account" asp-action="UnlinkGoogle" class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Are you sure you want to unlink your Google account?')">
                                <i class="fas fa-unlink"></i> Unlink
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>No Google Account Linked</strong><br>
                                <small>Link your Google account for external integrations and convenience features</small>
                            </div>
                            <a asp-controller="Account" asp-action="LinkGoogle" class="btn btn-danger">
                                <i class="fab fa-google"></i> Link Google Account
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-id-card"></i> User Identities</h6>
            </div>
            <div class="card-body">
                @{
                    var identities = ViewBag.UserIdentities as List<Microsoft.Graph.Models.ObjectIdentity>;
                }
                @if (identities != null && identities.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Issuer</th>
                                    <th>ID</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var identity in identities)
                                {
                                    <tr class="@(identity.SignInType == "federated" && identity.Issuer == "google.com" ? "table-success" : "")">
                                        <td>
                                            @if (identity.SignInType == "federated" && identity.Issuer == "google.com")
                                            {
                                                <i class="fab fa-google text-danger"></i>
                                            }
                                            else if (identity.SignInType == "emailAddress")
                                            {
                                                <i class="fas fa-envelope text-primary"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-user"></i>
                                            }
                                            @identity.SignInType
                                        </td>
                                        <td class="small">@identity.Issuer</td>
                                        <td class="small text-break">@identity.IssuerAssignedId</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted small">No identities found</p>
                }
            </div>
        </div>
    </div>
</div>